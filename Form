<!DOCTYPE html>
<html>
  <body>
    <form id="form">
      <input name="network" value="AIS"><br>
      <input name="price" value="99"><br>
      <input name="speed" value="1Mbps"><br>
      <input name="duration" value="7 วัน"><br>
      <input name="description" value="แพ็กเสริมเน็ต"><br>
      <input name="link" value="http://example.com"><br>
      <button type="submit">ส่งข้อมูล</button>
    </form>
    <script>
      document.getElementById("form").addEventListener("submit", function(e) {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(this).entries());
        fetch("https://script.google.com/macros/s/URL-ของคุณ/exec", {
          method: "POST",
          body: JSON.stringify(data),
          headers: { "Content-Type": "application/json" }
        }).then(() => alert("ส่งสำเร็จ")).catch(() => alert("เกิดข้อผิดพลาด"));
      });
    </script>
  </body>
</html>
